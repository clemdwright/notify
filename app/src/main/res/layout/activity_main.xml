<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_text"
        android:id="@+id/button"/>


    <TextView
        android:layout_below="@id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bridgedName"
        android:text="BRIDGED"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LikeAction"
        android:layout_below="@id/bridgedName"
        android:id="@+id/bridgedLike" />


    <TextView
        android:layout_below="@id/bridgedLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wearableName"
        android:text="WEARABLE"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RemoteInput"
        android:layout_below="@id/wearableName"
        android:id="@+id/remoteInput" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LikeAction"
        android:layout_below="@id/remoteInput"
        android:id="@+id/wearableLike" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/defaultsName"
        android:layout_below="@id/wearableLike"
        android:text="DEFAULTS"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sound"
        android:layout_below="@id/defaultsName"
        android:id="@+id/sound"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vibrate"
        android:layout_below="@+id/sound"
        android:id="@+id/vibrate"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lights"
        android:layout_below="@+id/vibrate"
        android:id="@+id/lights"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priorityName"
        android:text="PRIORITY"
        android:layout_below="@+id/lights"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <Spinner
        android:id="@+id/priority"
        android:layout_below="@+id/priorityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/styleName"
        android:text="STYLE"
        android:layout_below="@+id/priority"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <RadioGroup

        android:id="@+id/bigStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/styleName">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_big_style"
            android:checked="true"
            android:id="@+id/noBigStyle" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/big_picture_style"
            android:id="@+id/bigPictureStyle" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/big_text_style"
            android:id="@+id/bigTextStyle" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inbox_style"
            android:id="@+id/inboxStyle" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/otherName"
        android:text="OTHER"
        android:layout_below="@+id/bigStyle"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <CheckBox
        android:id="@+id/autocancel"
        android:text="Auto cancel"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/otherName"/>

    <!--<Button-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/button_text"-->
        <!--android:layout_below="@id/autocancel"-->
        <!--android:id="@+id/button"-->
        <!--android:layout_marginTop="@dimen/activity_vertical_margin"/>-->

</RelativeLayout>
